<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">用户登录</h3>
	</div>
	<!-- /.box-header -->
	<!-- form start -->
	<form role="form" class="loginForm">
		<div class="box-body">
			<div class="form-group">
				<label for="inputEmail">账号</label>
				<input type="text" class="form-control" id="inputEmail" name="inputEmail" required placeholder="请输入账号">
			</div>
			<div class="form-group">
				<label for="inputPassword">密码</label>
				<input type="password" class="form-control" id="inputPassword" name="inputPassword" required placeholder="请输入密码">
			</div>
		</div>
		<!-- /.box-body -->
		<div class="box-footer">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</form>
</div>